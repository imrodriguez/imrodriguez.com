---
import { changeLanguage } from "i18next";
import Layout from "../../layouts/Layout.astro";

changeLanguage("es");

export async function getStaticPaths() {
    const posts = await Astro.glob("/src/content/blog/*.md");
    return posts.map(({ Content, frontmatter: { postTitle: title, seoMetaDescription: metadescription, slug, focusKeyphrase, }, }) => {
        return {
            params: { slug },
            props: { Content, title, metadescription, focusKeyphrase },
        };
    });
}
const { Content, title, metadescription, focusKeyphrase } = Astro.props;
const { slug } = Astro.params;
---

<Layout
  title={`${title} | imrodriguez`}
  description={metadescription}
  keywords={[]}
>
  <main class="mt-20 container m-auto">
    <h1 class="font-subtitle font-bold uppercase text-4xl text-center">
      {title}
    </h1>
    <p class="text-center">{focusKeyphrase}</p>
    <div class="container text-justify my-8">
      <Content />
    </div>
  </main>
</Layout>
